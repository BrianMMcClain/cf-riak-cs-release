#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/cf-riak-cs-service-broker/helpers/ctl_setup.sh 'cf-riak-cs-service-broker'

export LANG=en_US.UTF-8

case $1 in

  start)
    pid_guard $PIDFILE $JOB_NAME

    cd /var/vcap/packages/cf-riak-cs-service-broker
    bundle exec rackup -E deployment -p $PORT -D -P $PIDFILE\
         >>$LOG_DIR/$JOB_NAME.stdout.log \
         2>>$LOG_DIR/$JOB_NAME.stderr.log
    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;
  *)
    echo "Usage: cf-riak-cs-service-broker_ctl {start|stop}"

    ;;

esac
exit 0
